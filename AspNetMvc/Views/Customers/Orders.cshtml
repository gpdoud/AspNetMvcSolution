@model  AspNetMvc.ViewModels.CustomerOrders

@{
    ViewBag.Title = "Orders";
}

<h2>@Model.Customer.Name - Orders</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Description
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

    @foreach(var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.Total.ToString("c0")
            </td>
        </tr>
    }

</table>
